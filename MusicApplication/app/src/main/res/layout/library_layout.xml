<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFC">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/image_user_parent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="34dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_user_library"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/lbl_name_title_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_user_parent"
                android:layout_alignBottom="@+id/image_user_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@id/image_user_parent"
                android:fontFamily="@font/rubik_meduim"
                android:gravity="center"
                android:text="דוד ארצי"
                android:textColor="#0E131E"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/record_empty_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:visibility="gone">

        <ImageView
            android:id="@+id/library_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp"
            android:src="@drawable/library_icon" />

        <TextView
            android:id="@+id/lbl_dummy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/library_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="73dp"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="@string/description_library"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lbl_dummy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_highlight_arrows"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/description_highlight"
            android:textColor="#5D5D5D"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/image_highlight_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="122dp"
            android:src="@drawable/arrow_down" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/record_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar">

        <LinearLayout
            android:id="@+id/record_graph_container"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="90dp"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_recording_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_graph_container"
            android:layout_marginStart="30dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:lines="1"
            android:text="02:20"
            android:textColor="#0E131E"
            android:textSize="45dp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_recording_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_recording_time"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:lines="1"
            android:text="בגירסא זו ניתן להקליט עד 3 דק’"
            android:textColor="#0E131E"
            android:textSize="14dp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_cancel_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_recording_message"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawablePadding="3dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#0E131E"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/cancel_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_save_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_recording_message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawablePadding="3dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/save_recording_btn"
            android:textColor="#0E131E"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/save_location_icon" />

    </RelativeLayout>

</RelativeLayout>