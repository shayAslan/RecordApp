<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/image_user_parent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="34dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_user_library"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/lbl_name_title_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_user_parent"
                android:layout_alignBottom="@+id/image_user_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@id/image_user_parent"
                android:fontFamily="@font/rubik_meduim"
                android:gravity="center"
                android:text="דוד ארצי"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/library_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:src="@drawable/library_icon" />

    <TextView
        android:id="@+id/lbl_dummy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/library_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="@string/description_library"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/lbl_dummy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_highlight_arrows"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center"
        android:text="@string/description_highlight"
        android:textColor="#5D5D5D"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/image_highlight_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="122dp"
        android:src="@drawable/arrow_down" />


</RelativeLayout>